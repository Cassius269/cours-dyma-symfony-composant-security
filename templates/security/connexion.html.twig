{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<h1>Page Inscription</h1>
	{% if error %}
		<p>{{error.message}}</p>
	{% endif %}

	<form action="{{path('connexion')}}" method="POST">
		<label for="email">Email</label>
		<input type="email" id="email" name="_username" value="{{username}}">
		<label for="password">Password</label><input type="password" name="_password">
		<input type="submit">
	</form>
{% endblock %}
